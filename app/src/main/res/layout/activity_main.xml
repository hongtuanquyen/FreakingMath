<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/screen_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/imgView_Bulb"
        android:layout_above="@id/button_Start"
        android:src="@drawable/bulb_black"
        android:layout_toLeftOf="@id/button_Start"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <ImageView
        android:id="@+id/imgView_Numbers"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imgView_FreakingMath"
        android:src="@drawable/number_mainscreen_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgView_FreakingMath"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/freakingmath_black"
        android:scaleType="fitXY"
        android:layout_width="350dp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/button_Start"
        android:textStyle="bold"
        android:text="START"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_screen_main"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/button_Score"
        android:textStyle="bold"
        android:text="SCORE"
        android:textSize="20dp"
        android:layout_below="@id/button_Start"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_screen_main"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/button_Options"
        android:textStyle="bold"
        android:text="OPTIONS"
        android:textSize="20dp"
        android:layout_below="@id/button_Score"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_screen_main"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/button_Exit"
        android:textStyle="bold"
        android:text="EXIT"
        android:textSize="20dp"
        android:layout_below="@id/button_Options"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_screen_main"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="50dp" />

</RelativeLayout>